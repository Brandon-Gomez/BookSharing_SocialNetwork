{"ast":null,"code":"import apiClient from '@/services/ApiService';\nexport default {\n  data() {\n    return {\n      profileData: {\n        name: '',\n        email: '',\n        dob: '',\n        gender: '',\n        description: '',\n        imageUrl: '' // Campo para la imagen de perfil\n      }\n    };\n  },\n  async mounted() {\n    const token = localStorage.getItem('authToken');\n    if (token) {\n      try {\n        const response = await apiClient.get('/profile', {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.profileData = response.data.msg;\n      } catch (error) {\n        console.error(\"Error fetching profile:\", error);\n      }\n    }\n  },\n  methods: {\n    async updateProfile() {\n      const token = localStorage.getItem('authToken');\n      if (token) {\n        try {\n          await apiClient.put('/profile', this.profileData, {\n            headers: {\n              Authorization: `Bearer ${token}`\n            }\n          });\n          alert('Perfil actualizado exitosamente');\n        } catch (error) {\n          console.error('Error updating profile:', error);\n        }\n      }\n    },\n    handleImageUpload(event) {\n      const file = event.target.files[0];\n      if (file) {\n        const reader = new FileReader();\n        reader.onload = e => {\n          this.profileData.imageUrl = e.target.result;\n        };\n        reader.readAsDataURL(file);\n      }\n    }\n  }\n};","map":{"version":3,"names":["apiClient","data","profileData","name","email","dob","gender","description","imageUrl","mounted","token","localStorage","getItem","response","get","headers","Authorization","msg","error","console","methods","updateProfile","put","alert","handleImageUpload","event","file","target","files","reader","FileReader","onload","e","result","readAsDataURL"],"sources":["C:\\DATA\\POW\\BookSharing_SocialNetwork\\fronvue\\src\\components\\profile_component.vue"],"sourcesContent":["<template>\r\n  <div class=\"container mt-5\">\r\n    <div class=\"row justify-content-center\">\r\n      <div class=\"col-md-8\">\r\n        <div class=\"card shadow-lg p-4\">\r\n          <div class=\"card-body text-center\">\r\n            <h2 class=\"mb-4\">Información del perfil</h2>\r\n            \r\n            <!-- Imagen de perfil -->\r\n            <div class=\"mb-3\">\r\n              <img\r\n                v-if=\"profileData.imageUrl\"\r\n                :src=\"profileData.imageUrl\"\r\n                class=\"rounded-circle img-thumbnail\"\r\n                alt=\"Profile Picture\"\r\n              />\r\n              <input\r\n                type=\"file\"\r\n                id=\"imageUpload\"\r\n                class=\"form-control-file mt-3\"\r\n                @change=\"handleImageUpload\"\r\n              />\r\n            </div>\r\n\r\n            <!-- Formulario de edición del perfil -->\r\n            <form @submit.prevent=\"updateProfile\">\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"name\">Nombre</label>\r\n                <input\r\n                  type=\"text\"\r\n                  id=\"name\"\r\n                  v-model=\"profileData.name\"\r\n                  class=\"form-control\"\r\n                />\r\n              </div>\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"dob\">Fecha de Nacimiento</label>\r\n                <input\r\n                  type=\"date\"\r\n                  id=\"dob\"\r\n                  v-model=\"profileData.dob\"\r\n                  class=\"form-control\"\r\n                />\r\n              </div>\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"gender\">Género</label>\r\n                <select\r\n                  id=\"gender\"\r\n                  v-model=\"profileData.gender\"\r\n                  class=\"form-control\"\r\n                >\r\n                  <option value=\"masculino\">Masculino</option>\r\n                  <option value=\"femenino\">Femenino</option>\r\n                </select>\r\n              </div>\r\n              <div class=\"form-group mb-4\">\r\n                <label for=\"description\">Descripción</label>\r\n                <textarea\r\n                  id=\"description\"\r\n                  v-model=\"profileData.description\"\r\n                  class=\"form-control\"\r\n                  rows=\"3\"\r\n                ></textarea>\r\n              </div>\r\n              <button type=\"submit\" class=\"btn btn-primary w-100\">\r\n                Guardar cambios\r\n              </button>\r\n            </form>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport apiClient from '@/services/ApiService';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      profileData: {\r\n        name: '',\r\n        email: '',\r\n        dob: '',\r\n        gender: '',\r\n        description: '',\r\n        imageUrl: '' // Campo para la imagen de perfil\r\n      }\r\n    };\r\n  },\r\n  async mounted() {\r\n    const token = localStorage.getItem('authToken');\r\n    if (token) {\r\n      try {\r\n        const response = await apiClient.get('/profile', {\r\n          headers: {\r\n            Authorization: `Bearer ${token}`\r\n          }\r\n        });\r\n        this.profileData = response.data.msg;\r\n      } catch (error) {\r\n        console.error(\"Error fetching profile:\", error);\r\n      }\r\n    }\r\n  },\r\n  methods: {\r\n    async updateProfile() {\r\n      const token = localStorage.getItem('authToken');\r\n      if (token) {\r\n        try {\r\n          await apiClient.put('/profile', this.profileData, {\r\n            headers: {\r\n              Authorization: `Bearer ${token}`\r\n            }\r\n          });\r\n          alert('Perfil actualizado exitosamente');\r\n        } catch (error) {\r\n          console.error('Error updating profile:', error);\r\n        }\r\n      }\r\n    },\r\n\r\n    handleImageUpload(event) {\r\n      const file = event.target.files[0];\r\n      if (file) {\r\n        const reader = new FileReader();\r\n        reader.onload = (e) => {\r\n          this.profileData.imageUrl = e.target.result;\r\n        };\r\n        reader.readAsDataURL(file);\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.container {\r\n  max-width: 800px;\r\n}\r\n\r\n.card {\r\n  border-radius: 10px;\r\n  background-color: #fff;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.card-body {\r\n  padding: 2rem;\r\n}\r\n\r\nh2 {\r\n  font-size: 2rem;\r\n  font-weight: bold;\r\n}\r\n\r\n.mb-3 {\r\n  margin-bottom: 1.5rem;\r\n}\r\n\r\nimg {\r\n  width: 150px;\r\n  height: 150px;\r\n  object-fit: cover;\r\n}\r\n\r\n.form-group {\r\n  margin-bottom: 1.25rem;\r\n}\r\n\r\nlabel {\r\n  font-size: 1.1rem;\r\n  font-weight: 600;\r\n  color: #333;\r\n}\r\n\r\ninput,\r\nselect,\r\ntextarea {\r\n  width: 100%;\r\n  padding: 0.75rem;\r\n  border: 1px solid #ccc;\r\n  border-radius: 5px;\r\n  background-color: #f9f9f9;\r\n  font-size: 1rem;\r\n}\r\n\r\nbutton {\r\n  background-color: #007bff;\r\n  color: white;\r\n  padding: 0.75rem;\r\n  border-radius: 5px;\r\n  border: none;\r\n  font-size: 1.1rem;\r\n  cursor: pointer;\r\n}\r\n\r\nbutton:hover {\r\n  background-color: #0056b3;\r\n}\r\n\r\ntextarea {\r\n  resize: vertical;\r\n}\r\n</style>\r\n"],"mappings":"AA4EA,OAAOA,SAAQ,MAAO,uBAAuB;AAE7C,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,WAAW,EAAE;QACXC,IAAI,EAAE,EAAE;QACRC,KAAK,EAAE,EAAE;QACTC,GAAG,EAAE,EAAE;QACPC,MAAM,EAAE,EAAE;QACVC,WAAW,EAAE,EAAE;QACfC,QAAQ,EAAE,EAAC,CAAE;MACf;IACF,CAAC;EACH,CAAC;EACD,MAAMC,OAAOA,CAAA,EAAG;IACd,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC;IAC/C,IAAIF,KAAK,EAAE;MACT,IAAI;QACF,MAAMG,QAAO,GAAI,MAAMb,SAAS,CAACc,GAAG,CAAC,UAAU,EAAE;UAC/CC,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUN,KAAK;UAChC;QACF,CAAC,CAAC;QACF,IAAI,CAACR,WAAU,GAAIW,QAAQ,CAACZ,IAAI,CAACgB,GAAG;
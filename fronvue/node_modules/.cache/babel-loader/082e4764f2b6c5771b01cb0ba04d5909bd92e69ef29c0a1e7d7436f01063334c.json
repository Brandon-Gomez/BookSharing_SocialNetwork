{"ast":null,"code":"import apiClient from '@/services/ApiService';\nexport default {\n  data() {\n    return {\n      profileData: {\n        name: '',\n        email: '',\n        birthdate: '',\n        gender: '',\n        description: '',\n        imageUrl: '' // Para almacenar la URL de la imagen de perfil\n      },\n      imageFile: null // Para almacenar el archivo de imagen\n    };\n  },\n  async mounted() {\n    const token = localStorage.getItem('authToken');\n    if (token) {\n      try {\n        const response = await apiClient.get('/profile', {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.profileData = response.data.msg;\n      } catch (error) {\n        console.error('Error fetching profile:', error);\n      }\n    }\n  },\n  methods: {\n    // Manejar la carga de la imagen\n    handleImageUpload(event) {\n      const file = event.target.files[0];\n      if (file) {\n        this.imageFile = file;\n        const reader = new FileReader();\n        reader.onload = () => {\n          this.profileData.imageUrl = reader.result;\n        };\n        reader.readAsDataURL(file);\n      }\n    },\n    async updateProfile() {\n      const token = localStorage.getItem('authToken');\n      if (token) {\n        try {\n          // Si hay una imagen seleccionada, la subimos\n          if (this.imageFile) {\n            const formData = new FormData();\n            formData.append('image', this.imageFile);\n            formData.append('name', this.profileData.name);\n            formData.append('email', this.profileData.email);\n            formData.append('birthdate', this.profileData.birthdate);\n            formData.append('gender', this.profileData.gender);\n            formData.append('description', this.profileData.description);\n            await apiClient.put('/profile', formData, {\n              headers: {\n                Authorization: `Bearer ${token}`,\n                'Content-Type': 'multipart/form-data'\n              }\n            });\n          } else {\n            await apiClient.put('/profile', this.profileData, {\n              headers: {\n                Authorization: `Bearer ${token}`\n              }\n            });\n          }\n          alert('Perfil actualizado exitosamente');\n        } catch (error) {\n          console.error('Error updating profile:', error);\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["apiClient","data","profileData","name","email","birthdate","gender","description","imageUrl","imageFile","mounted","token","localStorage","getItem","response","get","headers","Authorization","msg","error","console","methods","handleImageUpload","event","file","target","files","reader","FileReader","onload","result","readAsDataURL","updateProfile","formData","FormData","append","put","alert"],"sources":["C:\\DATA\\POW\\BookSharing_SocialNetwork\\fronvue\\src\\components\\profile_component.vue"],"sourcesContent":["<template>\r\n  <div class=\"profile-info container mt-5\">\r\n    <div class=\"row justify-content-center\">\r\n      <div class=\"col-md-8\">\r\n        <div class=\"card shadow-lg p-4\">\r\n          <div class=\"card-body\">\r\n            <h2 class=\"text-center mb-4\">Información del perfil</h2>\r\n            \r\n            <!-- Imagen de perfil -->\r\n            <div class=\"text-center mb-4\">\r\n              <img\r\n                v-if=\"profileData.imageUrl\"\r\n                :src=\"profileData.imageUrl\"\r\n                alt=\"Imagen de perfil\"\r\n                class=\"profile-img mb-3\"\r\n              />\r\n              <input\r\n                type=\"file\"\r\n                @change=\"handleImageUpload\"\r\n                accept=\"image/*\"\r\n                class=\"form-control-file\"\r\n              />\r\n            </div>\r\n\r\n            <form @submit.prevent=\"updateProfile\">\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"name\">Nombre:</label>\r\n                <input\r\n                  type=\"text\"\r\n                  id=\"name\"\r\n                  v-model=\"profileData.name\"\r\n                  class=\"form-control\"\r\n                  required\r\n                />\r\n              </div>\r\n\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"email\">Email:</label>\r\n                <input\r\n                  type=\"email\"\r\n                  id=\"email\"\r\n                  v-model=\"profileData.email\"\r\n                  class=\"form-control\"\r\n                  disabled\r\n                />\r\n              </div>\r\n\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"birthdate\">Fecha de Nacimiento:</label>\r\n                <input\r\n                  type=\"date\"\r\n                  id=\"birthdate\"\r\n                  v-model=\"profileData.birthdate\"\r\n                  class=\"form-control\"\r\n                  required\r\n                />\r\n              </div>\r\n\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"gender\">Género:</label>\r\n                <select\r\n                  id=\"gender\"\r\n                  v-model=\"profileData.gender\"\r\n                  class=\"form-control\"\r\n                  required\r\n                >\r\n                  <option value=\"masculino\">Masculino</option>\r\n                  <option value=\"femenino\">Femenino</option>\r\n                </select>\r\n              </div>\r\n\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"description\">Descripción:</label>\r\n                <textarea\r\n                  id=\"description\"\r\n                  v-model=\"profileData.description\"\r\n                  class=\"form-control\"\r\n                  rows=\"4\"\r\n                  placeholder=\"Escribe algo sobre ti\"\r\n                ></textarea>\r\n              </div>\r\n\r\n              <div class=\"text-center\">\r\n                <button type=\"submit\" class=\"btn btn-primary\">Guardar Cambios</button>\r\n              </div>\r\n            </form>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport apiClient from '@/services/ApiService';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      profileData: {\r\n        name: '',\r\n        email: '',\r\n        birthdate: '',\r\n        gender: '',\r\n        description: '',\r\n        imageUrl: '' // Para almacenar la URL de la imagen de perfil\r\n      },\r\n      imageFile: null // Para almacenar el archivo de imagen\r\n    };\r\n  },\r\n  async mounted() {\r\n    const token = localStorage.getItem('authToken');\r\n    if (token) {\r\n      try {\r\n        const response = await apiClient.get('/profile', {\r\n          headers: {\r\n            Authorization: `Bearer ${token}`\r\n          }\r\n        });\r\n        this.profileData = response.data.msg;\r\n      } catch (error) {\r\n        console.error('Error fetching profile:', error);\r\n      }\r\n    }\r\n  },\r\n  methods: {\r\n    // Manejar la carga de la imagen\r\n    handleImageUpload(event) {\r\n      const file = event.target.files[0];\r\n      if (file) {\r\n        this.imageFile = file;\r\n        const reader = new FileReader();\r\n        reader.onload = () => {\r\n          this.profileData.imageUrl = reader.result;\r\n        };\r\n        reader.readAsDataURL(file);\r\n      }\r\n    },\r\n\r\n    async updateProfile() {\r\n      const token = localStorage.getItem('authToken');\r\n      if (token) {\r\n        try {\r\n          // Si hay una imagen seleccionada, la subimos\r\n          if (this.imageFile) {\r\n            const formData = new FormData();\r\n            formData.append('image', this.imageFile);\r\n            formData.append('name', this.profileData.name);\r\n            formData.append('email', this.profileData.email);\r\n            formData.append('birthdate', this.profileData.birthdate);\r\n            formData.append('gender', this.profileData.gender);\r\n            formData.append('description', this.profileData.description);\r\n\r\n            await apiClient.put('/profile', formData, {\r\n              headers: {\r\n                Authorization: `Bearer ${token}`,\r\n                'Content-Type': 'multipart/form-data'\r\n              }\r\n            });\r\n          } else {\r\n            await apiClient.put('/profile', this.profileData, {\r\n              headers: {\r\n                Authorization: `Bearer ${token}`\r\n              }\r\n            });\r\n          }\r\n          alert('Perfil actualizado exitosamente');\r\n        } catch (error) {\r\n          console.error('Error updating profile:', error);\r\n        }\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.profile-info {\r\n  background-color: #fafafa;\r\n  border-radius: 8px;\r\n  padding: 20px;\r\n}\r\n\r\n.card {\r\n  border-radius: 8px;\r\n}\r\n\r\n.card-body {\r\n  padding: 2rem;\r\n}\r\n\r\nh2 {\r\n  font-size: 2rem;\r\n  font-weight: bold;\r\n}\r\n\r\nform {\r\n  margin-top: 1rem;\r\n}\r\n\r\nlabel {\r\n  font-weight: bold;\r\n}\r\n\r\ninput,\r\ntextarea,\r\nselect {\r\n  width: 100%;\r\n  padding: 8px;\r\n  margin-top: 5px;\r\n  border: 1px solid #ddd;\r\n  border-radius: 5px;\r\n}\r\n\r\ntextarea {\r\n  resize: vertical;\r\n}\r\n\r\nbutton {\r\n  padding: 10px 20px;\r\n  font-size: 16px;\r\n  border-radius: 5px;\r\n  background-color: #007bff;\r\n  border: none;\r\n  color: white;\r\n  cursor: pointer;\r\n}\r\n\r\nbutton:hover {\r\n  background-color: #0056b3;\r\n}\r\n\r\n.profile-img {\r\n  width: 120px;\r\n  height: 120px;\r\n  border-radius: 50%;\r\n  object-fit: cover;\r\n  border: 2px solid #ddd;\r\n}\r\n\r\ninput[type=\"file\"] {\r\n  margin-top: 10px;\r\n}\r\n</style>\r\n"],"mappings":"AA8FA,OAAOA,SAAQ,MAAO,uBAAuB;AAE7C,eAAe;EACbC,IAAIA,CAAA,EA
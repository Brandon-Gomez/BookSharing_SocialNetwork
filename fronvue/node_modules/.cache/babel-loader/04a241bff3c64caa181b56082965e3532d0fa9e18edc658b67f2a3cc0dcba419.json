rage.removeItem('authToken');\n      localStorage.removeItem('profileData');\n      this.$router.push('/login').then(() => {\n        window.location.reload();\n      });\n    },\n    checkAuthentication() {\n      return !!localStorage.getItem('authToken');\n    }\n  }\n};","map":{"version":3,"names":["apiClient","data","profileData","JSON","parse","localStorage","getItem","name","username","profile_picture","isSidebarOpen","isSearchVisible","searchQuery","users","methods","getProfileImage","defaultImageUrl","navigateToHome","$router","push","navigateToProfile","isAuthenticated","checkAuthentication","alert","toggleSearch","toggleSidebar","searchUser","length","response","get","params","query","error","console","goToProfile","logout","removeItem","then","window","location","reload"],"sources":["C:\\DATA\\POW\\BookSharing_SocialNetwork\\fronvue\\src\\components\\navbar_component.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <!-- Botón para alternar la barra lateral -->\r\n    <button @click=\"toggleSidebar\" class=\"toggle-button\">\r\n      ☰ <!-- Icono de hamburguesa -->\r\n    </button>\r\n\r\n    <div class=\"sidebar\" :class=\"{ open: isSidebarOpen, collapsed: !isSidebarOpen }\">\r\n      <ul class=\"list-group list-group-flush\">\r\n        <li\r\n          class=\"list-group-item list-group-item-action\"\r\n          @click=\"navigateToHome\"\r\n          :title=\"!isSidebarOpen ? 'Inicio' : ''\"\r\n        >\r\n          <i class=\"fa fa-home\"></i>\r\n          <span v-if=\"isSidebarOpen\">Inicio</span>\r\n        </li>\r\n        <li\r\n          class=\"list-group-item list-group-item-action\"\r\n          @click=\"navigateToProfile\"\r\n          :title=\"!isSidebarOpen ? 'Perfil' : ''\"\r\n        >\r\n          <i class=\"fa fa-user\"></i>\r\n          <span v-if=\"isSidebarOpen\">Perfil</span>\r\n        </li>\r\n        <li\r\n          class=\"list-group-item list-group-item-action\"\r\n          @click=\"logout\"\r\n          :title=\"!isSidebarOpen ? 'Cerrar sesión' : ''\"\r\n        >\r\n          <i class=\"fa fa-sign-out\"></i>\r\n          <span v-if=\"isSidebarOpen\">Cerrar sesión</span>\r\n        </li>\r\n        <li\r\n          class=\"list-group-item list-group-item-action\"\r\n          @click=\"toggleSearch\"\r\n          :title=\"!isSidebarOpen ? 'Buscar' : ''\"\r\n        >\r\n          <i class=\"fa fa-search\"></i>\r\n          <span v-if=\"isSidebarOpen\">Buscar</span>\r\n        </li>\r\n      </ul>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport apiClient from '@/services/ApiService';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      profileData: JSON.parse(localStorage.getItem('profileData')) || {\r\n        name: '',\r\n        username: '',\r\n        profile_picture: '',\r\n      },\r\n      isSidebarOpen: false, // Estado de la barra lateral\r\n      isSearchVisible: false,\r\n      searchQuery: '',\r\n      users: [],\r\n    };\r\n  },\r\n  methods: {\r\n    getProfileImage() {\r\n    const defaultImageUrl = \"https://firebasestorage.googleapis.com/v0/b/booksharing-socialnetwork.appspot.com/o/profile%2Fdefault.jpg?alt=media\"; // Reemplaza con la URL de tu imagen predeterminada en Firebase\r\n    return this.profileData.profile_picture\r\n      ? this.profileData.profile_picture\r\n      : defaultImageUrl;\r\n  },\r\n    navigateToHome() {\r\n      this.$router.push('/');\r\n    },\r\n    navigateToProfile() {\r\n      const isAuthenticated = this.checkAuthentication();\r\n      if (isAuthenticated) {\r\n        this.$router.push(`/profile/${this.profileData.username}`);\r\n      } else {\r\n        alert(\"Por favor, inicia sesión primero.\");\r\n        this.$router.push('/login');\r\n      }\r\n    },\r\n    toggleSearch() {\r\n      this.isSearchVisible = !this.isSearchVisible;\r\n    },\r\n    toggleSidebar() {\r\n      this.isSidebarOpen = !this.isSidebarOpen; // Alternar la visibilidad de la barra lateral\r\n    },\r\n    async searchUser() {\r\n      if (this.searchQuery.length > 2) {\r\n        try {\r\n          const response = await apiClient.get('/search', { params: { query: this.searchQuery } });\r\n          this.users = response.data;\r\n        } catch (error) {\r\n          console.error('Error al buscar usuarios:', error);\r\n        }\r\n      } else {\r\n        this.users = [];\r\n      }\r\n    },\r\n    goToProfile(username) {\r\n      this.$router.push(`/profile/${username}`);\r\n      this.isSearchVisible = false;\r\n    },\r\n    logout() {\r\n      localStorage.removeItem('authToken');\r\n      localStorage.removeItem('profileData');\r\n      this.$router.push('/login').then(() => {\r\n        window.location.reload();\r\n      });\r\n    },\r\n    checkAuthentication() {\r\n      return !!localStorage.getItem('authToken');\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n/* Sidebar general style */\r\n.sidebar {\r\n  width: 60px; /* Ancho inicial colapsado */\r\n  background-color: rgba(255, 255, 255, 0.85);\r\n  backdrop-filter: blur(12px);\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  bottom: 0;\r\n  z-index: 1000;\r\n  box-shadow: 4px 0 15px rgba(0, 0, 0, 0.2);\r\n  transition: all 0.3s ease; /* Transición para expansión */\r\n  overflow: hidden;\r\n}\r\n\r\n.sidebar.open {\r\n  width: 250px; /* Ancho cuando está expandido */\r\n}\r\n\r\n.sidebar .list-group-item {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: flex-start;\r\n  padding: 15px 20px;\r\n  transition: all 0.3s ease;\r\n}\r\n\r\n.sidebar .list-group-item i {\r\n  margin-right: 10px;\r\n  font-size: 1.2em;\r\n}\r\n\r\n/* Ocultar el texto cuando la barra lateral está colapsada */\r\n.sidebar.collapsed .list-group-item span {\r\n  display: none;\r\n}\r\n\r\n/* Centrar íconos en el estado colapsado */\r\n.sidebar.collapsed .list-group-item i {\r\n  margin: 0 auto;\r\n}\r\n\r\n/* Botón de alternar */\r\n.toggle-button {\r\n  position: fixed;\r\n  top: 20px;\r\n  left: 20px;\r\n 
methods: {\r\n    navigateToHome() {\r\n      this.$router.push('/');\r\n    },\r\n    navigateToProfile() {\r\n      const isAuthenticated = this.checkAuthentication(); \r\n      if (isAuthenticated) {\r\n        this.$router.push(`/profile/${this.profileData.username}`);\r\n      } else {\r\n        alert(\"Por favor, inicia sesión primero.\");\r\n        this.$router.push('/login');\r\n      }\r\n    },\r\n    toggleSearch() {\r\n      this.isSearchVisible = !this.isSearchVisible;\r\n    },\r\n    async searchUser() {\r\n      if (this.searchQuery.length > 2) {\r\n        try {\r\n          const response = await apiClient.get('/search', { params: { query: this.searchQuery } });\r\n          this.users = response.data;\r\n        } catch (error) {\r\n          console.error('Error al buscar usuarios:', error);\r\n        }\r\n      } else {\r\n        this.users = [];\r\n      }\r\n    },\r\n    goToProfile(username) {\r\n      this.$router.push(`/profile/${username}`);\r\n      this.isSearchVisible = false;\r\n    },\r\n    logout() {\r\n      localStorage.removeItem('authToken');\r\n      localStorage.removeItem('profileData'); \r\n      this.$router.push('/login');\r\n    },\r\n    checkAuthentication() {\r\n      return !!localStorage.getItem('authToken');\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.sidebar {\r\n  width: 250px;\r\n  background-color: #f8f9fa;\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  bottom: 0;\r\n  padding: 0;\r\n  z-index: 1000;\r\n  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);\r\n  transition: width 0.3s ease;\r\n}\r\n\r\n.sidebar:hover {\r\n  width: 260px;\r\n}\r\n\r\n.list-group-item {\r\n  cursor: pointer;\r\n  padding: 12px 20px;\r\n  transition: background-color 0.2s, color 0.2s;\r\n}\r\n\r\n.list-group-item:hover {\r\n  background-color: #007bff;\r\n  color: white;\r\n}\r\n\r\n.search-bar {\r\n  width: 100%;\r\n  padding: 15px;\r\n  background-color: #ffffff;\r\n  border-top: 1px solid #dee2e6;\r\n}\r\n\r\n.list-group {\r\n  max-height: 200px;\r\n  overflow-y: auto;\r\n}\r\n\r\n/* Ajustes responsivos */\r\n@media (max-width: 768px) {\r\n  .sidebar {\r\n    width: 200px;\r\n  }\r\n\r\n  .sidebar:hover {\r\n    width: 220px;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";AAuCA,OAAOA,SAAQ,MAAO,uBAAuB;AAE7C,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,WAAW,EAAEC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,aAAa,CAAC,KAAK;QAC9DC,IAAI,EAAE,EAAE;QACRC,QAAQ,EAAE,EAAE;QACZC,eAAe,EAAE;MACnB,CAAC;MACDC,eAAe,EAAE,KAAK;MACtBC,WAAW,EAAE,EAAE;MACfC,KAAK,EAAE;IACT,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,cAAcA,CAAA,EAAG;MACf,IAAI,CAACC,OAAO,CAACC,IAAI,CAAC,GAAG,CAAC;IACxB,CAAC;IACDC,iBAAiBA,CAAA,EAAG;MAClB,MAAMC,eAAc,GAAI,IAAI,CAACC,mBAAmB,CAAC,CAAC;MAClD,IAAID,eAAe,EAAE;QACnB,IAAI,CAACH,OAAO,CAACC,IAAI,CAAC,YAAY,IAAI,CAACd,WAAW,CAACM,QAAQ,EAAE,CAAC;MAC5D,OAAO;QACLY,KAAK,CAAC,mCAAmC,CAAC;QAC1C,IAAI,CAACL,OAAO,CAACC,IAAI,CAAC,QAAQ,CAAC;MAC7B;IACF,CAAC;IACDK,YAAYA,CAAA,EAAG;MACb,IAAI,CAACX,eAAc,GAAI,CAAC,IAAI,CAACA,eAAe;IAC9C,CAAC;IACD,MAAMY,UAAUA,CAAA,EAAG;MACjB,IAAI,IAAI,CAACX,WAAW,CAACY,MAAK,GAAI,CAAC,EAAE;QAC/B,IAAI;UACF,MAAMC,QAAO,GAAI,MAAMxB,SAAS,CAACyB,GAAG,CAAC,SAAS,EAAE;YAAEC,MAAM,EAAE;cAAEC,KAAK,EAAE,IAAI,CAAChB;YAAY;UAAE,CAAC,CAAC;UACxF,IAAI,CAACC,KAAI,GAAIY,QAAQ,CAACvB,IAAI;QAC5B,EAAE,OAAO2B,KAAK,EAAE;UACdC,OAAO,CAACD,KAAK,CAAC,2BAA2B,EAAEA,KAAK,CAAC;QACnD;MACF,OAAO;QACL,IAAI,CAAChB,KAAI,GAAI,EAAE;MACjB;IACF,CAAC;IACDkB,WAAWA,CAACtB,QAAQ,EAAE;MACpB,IAAI,CAACO,OAAO,CAACC,IAAI,CAAC,YAAYR,QAAQ,EAAE,CAAC;MACzC,IAAI,CAACE,eAAc,GAAI,KAAK;IAC9B,CAAC;IACDqB,MAAMA,CAAA,EAAG;MACP1B,YAAY,CAAC2B,UAAU,CAAC,WAAW,CAAC;MACpC3B,YAAY,CAAC2B,UAAU,CAAC,aAAa,CAAC;MACtC,IAAI,CAACjB,OAAO,CAACC,IAAI,CAAC,QAAQ,CAAC;IAC7B,CAAC;IACDG,mBAAmBA,CAAA,EAAG;MACpB,OAAO,CAAC,CAACd,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC;IAC5C;EACF;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}
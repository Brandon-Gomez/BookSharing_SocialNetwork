Cerrar sesión\r\n      </li>\r\n      <li @click=\"toggleSearch\">\r\n        <i class=\"fa fa-search\"></i> Buscar\r\n      </li>\r\n    </ul>\r\n    <div v-if=\"isSearchVisible\" class=\"search-bar\">\r\n      <input\r\n        type=\"text\"\r\n        v-model=\"searchQuery\"\r\n        @input=\"searchUser\"\r\n        placeholder=\"Buscar usuario...\"\r\n        class=\"form-control\"\r\n      />\r\n      <ul v-if=\"users.length\" class=\"list-group mt-2\">\r\n        <li \r\n          v-for=\"user in users\" \r\n          :key=\"user.id\" \r\n          class=\"list-group-item\" \r\n          @click=\"goToProfile(user.username)\">\r\n          {{ user.username }} ({{ user.name }})\r\n        </li>\r\n      </ul>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport apiClient from '@/services/ApiService'; \r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      profileData: JSON.parse(localStorage.getItem('profileData')) || {\r\n        name: '',\r\n        username: '',\r\n        profile_picture: ''\r\n      },\r\n      isSearchVisible: false,\r\n      searchQuery: '',\r\n      users: [],\r\n    };\r\n  },\r\n  methods: {\r\n    navigateToHome() {\r\n      this.$router.push('/');\r\n    },\r\n    navigateToProfile() {\r\n      const isAuthenticated = this.checkAuthentication(); \r\n      if (isAuthenticated) {\r\n        this.$router.push(`/profile/${this.profileData.username}`); // Asegúrate de que `username` esté en `profileData`\r\n      } else {\r\n        alert(\"Por favor, inicia sesión primero.\");\r\n        this.$router.push('/login');\r\n      }\r\n    },\r\n    toggleSearch() {\r\n      this.isSearchVisible = !this.isSearchVisible;\r\n    },\r\n    async searchUser() {\r\n      if (this.searchQuery.length > 2) {\r\n        try {\r\n          const response = await apiClient.get('/search', { params: { query: this.searchQuery } });\r\n          console.log('Datos recibidos desde el backend:', response.data);\r\n          this.users = response.data;\r\n        } catch (error) {\r\n          console.error('Error al buscar usuarios:', error);\r\n        }\r\n      } else {\r\n        this.users = [];\r\n      }\r\n    },\r\n    goToProfile(username) {\r\n      this.$router.push(`/profile/${username}`);  // Redirige al perfil del usuario\r\n      this.isSearchVisible = false;  // Oculta la barra de búsqueda al seleccionar un usuario\r\n    },\r\n    logout() {\r\n      localStorage.removeItem('authToken');\r\n      localStorage.removeItem('profileData'); \r\n      this.$router.push('/login'); \r\n    },\r\n    checkAuthentication() {\r\n      return !!localStorage.getItem('authToken');\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.sidebar {\r\n  width: 250px; /* Ancho ligeramente mayor para más espacio */\r\n  background-color: #ffffff; /* Color de fondo más limpio */\r\n  padding: 20px;\r\n  position: fixed;\r\n  height: 100%;\r\n  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1); /* Sombra para dar profundidad */\r\n  transition: width 0.3s ease; /* Transición suave para cambios de tamaño */\r\n}\r\n\r\n.sidebar:hover {\r\n  width: 300px; /* Ancho expandido al pasar el ratón */\r\n}\r\n\r\n.search-bar {\r\n  margin-top: 20px; /* Espaciado entre los elementos del navbar y la barra de búsqueda */\r\n}\r\n\r\n.profile {\r\n  display: flex;\r\n  align-items: center;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.profile-picture {\r\n  width: 50px; /* Tamaño aumentado de la imagen de perfil */\r\n  height: 50px;\r\n  border-radius: 50%;\r\n  margin-right: 10px;\r\n  border: 2px solid #007bff; /* Borde alrededor de la imagen */\r\n}\r\n\r\n.username {\r\n  font-weight: bold;\r\n  color: #343a40; /* Color del texto del nombre de usuario */\r\n}\r\n\r\n.sidebar ul {\r\n  list-style: none;\r\n  padding: 0;\r\n}\r\n\r\n.sidebar li {\r\n  padding: 12px 15px; /* Mayor padding para mejor clicabilidad */\r\n  cursor: pointer;\r\n  border-radius: 5px; /* Bordes redondeados */\r\n  transition: background-color 0.3s; /* Transición suave */\r\n}\r\n\r\n.sidebar li:hover {\r\n  background-color: #007bff; /* Color de fondo al pasar el ratón */\r\n  color: #ffffff; /* Color de texto al pasar el ratón */\r\n}\r\n\r\n.form-control {\r\n  width: calc(100% - 16px); /* Ajustar el ancho para que no se desborde */\r\n  padding: 10px; /* Padding aumentado para más comodidad */\r\n  margin-bottom: 15px;\r\n  border: 1px solid #ced4da; /* Borde más definido */\r\n  border-radius: 5px; /* Bordes redondeados para la barra de búsqueda */\r\n}\r\n\r\n.list-group {\r\n  max-height: 150px; /* Para limitar la altura de la lista de resultados */\r\n  overflow-y: auto; /* Añadir scroll si hay demasiados resultados */\r\n}\r\n\r\n/* Responsividad */\r\n@media (max-width: 768px) {\r\n  .sidebar {\r\n    width: 200px; /* Ancho estándar en pantallas más pequeñas */\r\n  }\r\n\r\n  .sidebar:hover {\r\n    width: 200px; /* Mantener el ancho al pasar el ratón */\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";;EACOA,KAAK,EAAC;AAAS;;EADtBC,GAAA;EAgBgCD,KAAK,EAAC;;;EAhBtCC,GAAA;EAwB8BD,KAAK,EAAC;;mBAxBpC;;uBACEE,mBAAA,CAiCM,OAjCNC,UAiCM,GAhCJC,mBAAA,CAaK,aAZHA,mBAAA,CAEK;IAFAC,OAAK,EAAAC,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAC,cAAA,IAAAD,QAAA,CAAAC,cAAA,IAAAF,IAAA,CAAc;gCACxBH,mBAAA,CAA0B;IAAvBJ,KAAK,EAAC;EAAY,4BAJ7BU,gBAAA,CAIkC,UAC5B,E,IACAN,mBAAA,CAEK;IAFAC,OAAK,EAAAC,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAG,iBAAA,IAAAH,QAAA,CAAAG,iBAAA,IAAAJ,IAAA,CAAiB;gCAC3BH,mBAAA,CAA0B;IAAvBJ,KAAK,EAAC;EAAY,4BAP7BU,gBAAA,CAOkC,UAC5B,E,IACAN,mBAAA,CAEK;IAFAC,OAAK,EAAAC,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAI,MAAA,IAAAJ,QAAA,CAAAI,MAAA,IAAAL,IAAA,CAAM;gCAChBH,mBAAA,CAA8B;IAA3BJ,KAAK,EAAC;EAAgB,4BAVjCU,gBAAA,CAUsC,iBAChC,E,IACAN,mBAAA,CAEK;IAFAC,OAAK,EAAAC,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAK,YAAA,IAAAL,QAAA,CAAAK,YAAA,IAAAN,IAAA,CAAY;gCACtBH,mBAAA,CAA4B;IAAzBJ,KAAK,EAAC;EAAc,4BAb/BU,gBAAA,CAaoC,UAC9B,E,MAESI,KAAA,CAAAC,eAAe,I,cAA1Bb,mBAAA,CAiBM,OAjBNc,UAiBM,G,gBAhBJZ,mBAAA,CAME;IALAa,IAAI,EAAC,MAAM;IAlBnB,
\r\n                <input\r\n                  type=\"text\"\r\n                  id=\"name\"\r\n                  v-model=\"profileData.name\"\r\n                  class=\"form-control\"\r\n                  required\r\n                />\r\n              </div>\r\n\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"email\">Email:</label>\r\n                <input\r\n                  type=\"email\"\r\n                  id=\"email\"\r\n                  v-model=\"profileData.email\"\r\n                  class=\"form-control\"\r\n                  disabled\r\n                />\r\n              </div>\r\n\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"birthdate\">Fecha de Nacimiento:</label>\r\n                <input\r\n                  type=\"date\"\r\n                  id=\"birthdate\"\r\n                  v-model=\"profileData.birthdate\"\r\n                  class=\"form-control\"\r\n                  required\r\n                />\r\n              </div>\r\n\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"gender\">Género:</label>\r\n                <select\r\n                  id=\"gender\"\r\n                  v-model=\"profileData.gender\"\r\n                  class=\"form-control\"\r\n                  required\r\n                >\r\n                  <option value=\"masculino\">Masculino</option>\r\n                  <option value=\"femenino\">Femenino</option>\r\n                </select>\r\n              </div>\r\n\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"description\">Descripción:</label>\r\n                <textarea\r\n                  id=\"description\"\r\n                  v-model=\"profileData.description\"\r\n                  class=\"form-control\"\r\n                  rows=\"4\"\r\n                  placeholder=\"Escribe algo sobre ti\"\r\n                ></textarea>\r\n              </div>\r\n\r\n              <div class=\"text-center\">\r\n                <button type=\"submit\" class=\"btn btn-primary\">Guardar Cambios</button>\r\n              </div>\r\n            </form>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport apiClient from '@/services/ApiService';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      profileData: {\r\n        name: '',\r\n        email: '',\r\n        birthdate: '',\r\n        gender: '',\r\n        description: ''\r\n      }\r\n    };\r\n  },\r\n  async mounted() {\r\n    const token = localStorage.getItem('authToken');\r\n    if (token) {\r\n      try {\r\n        const response = await apiClient.get('/profile', {\r\n          headers: {\r\n            Authorization: `Bearer ${token}`\r\n          }\r\n        });\r\n        this.profileData = response.data.msg;\r\n      } catch (error) {\r\n        console.error('Error fetching profile:', error);\r\n      }\r\n    }\r\n  },\r\n  methods: {\r\n    async updateProfile() {\r\n      const token = localStorage.getItem('authToken');\r\n      if (token) {\r\n        try {\r\n          await apiClient.put('/profile', this.profileData, {\r\n            headers: {\r\n              Authorization: `Bearer ${token}`\r\n            }\r\n          });\r\n          alert('Perfil actualizado exitosamente');\r\n        } catch (error) {\r\n          console.error('Error updating profile:', error);\r\n        }\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.profile-info {\r\n  background-color: #fafafa;\r\n  border-radius: 8px;\r\n  padding: 20px;\r\n}\r\n\r\n.card {\r\n  border-radius: 8px;\r\n}\r\n\r\n.card-body {\r\n  padding: 2rem;\r\n}\r\n\r\nh2 {\r\n  font-size: 2rem;\r\n  font-weight: bold;\r\n}\r\n\r\nform {\r\n  margin-top: 1rem;\r\n}\r\n\r\nlabel {\r\n  font-weight: bold;\r\n}\r\n\r\ninput,\r\ntextarea,\r\nselect {\r\n  width: 100%;\r\n  padding: 8px;\r\n  margin-top: 5px;\r\n  border: 1px solid #ddd;\r\n  border-radius: 5px;\r\n}\r\n\r\ntextarea {\r\n  resize: vertical;\r\n}\r\n\r\nbutton {\r\n  padding: 10px 20px;\r\n  font-size: 16px;\r\n  border-radius: 5px;\r\n  background-color: #007bff;\r\n  border: none;\r\n  color: white;\r\n  cursor: pointer;\r\n}\r\n\r\nbutton:hover {\r\n  background-color: #0056b3;\r\n}\r\n</style>\r\n"],"mappings":"AA6EA,OAAOA,SAAQ,MAAO,uBAAuB;AAE7C,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,WAAW,EAAE;QACXC,IAAI,EAAE,EAAE;QACRC,KAAK,EAAE,EAAE;QACTC,SAAS,EAAE,EAAE;QACbC,MAAM,EAAE,EAAE;QACVC,WAAW,EAAE;MACf;IACF,CAAC;EACH,CAAC;EACD,MAAMC,OAAOA,CAAA,EAAG;IACd,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC;IAC/C,IAAIF,KAAK,EAAE;MACT,IAAI;QACF,MAAMG,QAAO,GAAI,MAAMZ,SAAS,CAACa,GAAG,CAAC,UAAU,EAAE;UAC/CC,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUN,KAAK;UAChC;QACF,CAAC,CAAC;QACF,IAAI,CAACP,WAAU,GAAIU,QAAQ,CAACX,IAAI,CAACe,GAAG;MACtC,EAAE,OAAOC,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,yBAAyB,EAAEA,KAAK,CAAC;MACjD;IACF;EACF,CAAC;EACDE,OAAO,EAAE;IACP,MAAMC,aAAaA,CAAA,EAAG;MACpB,MAAMX,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC;MAC/C,IAAIF,KAAK,EAAE;QACT,IAAI;UACF,MAAMT,SAAS,CAACqB,GAAG,CAAC,UAAU,EAAE,IAAI,CAACnB,WAAW,EAAE;YAChDY,OAAO,EAAE;cACPC,aAAa,EAAE,UAAUN,KAAK;YAChC;UACF,CAAC,CAAC;UACFa,KAAK,CAAC,iCAAiC,CAAC;QAC1C,EAAE,OAAOL,KAAK,EAAE;UACdC,OAAO,CAACD,KAAK,CAAC,yBAAyB,EAAEA,KAAK,CAAC;QACjD;MACF;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}
{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport apiClient from '@/services/ApiService';\nexport default {\n  name: 'NavComponent',\n  data() {\n    return {\n      username: null // Aquí almacenaremos el nombre de usuario\n    };\n  },\n  methods: {\n    async fetchUserProfile() {\n      try {\n        const token = localStorage.getItem('authToken'); // Obtener el token del localStorage\n        if (token) {\n          // Hacer petición al backend para obtener el perfil del usuario autenticado\n          const response = await apiClient.get(`/profile/${username}`, {\n            headers: {\n              Authorization: `Bearer ${token}`\n            }\n          });\n          if (response.data && response.data.user) {\n            this.username = response.data.user.username; // Asignar el nombre de usuario\n          }\n        }\n      } catch (error) {\n        console.error('Error al obtener el perfil del usuario:', error);\n      }\n    },\n    logout() {\n      // Eliminar el token de autenticación o limpiar los datos de sesión\n      localStorage.removeItem('authToken');\n      localStorage.removeItem('profileData'); // Limpiar el perfil almacenado\n\n      // Redirigir al usuario a la página de login\n      this.$router.push('/login');\n    }\n  },\n  mounted() {\n    this.fetchUserProfile(); // Llamar al método para obtener el perfil del usuario al montar el componente\n  }\n};","map":{"version":3,"names":["apiClient","name","data","username","methods","fetchUserProfile","token","localStorage","getItem","response","get","headers","Authorization","user","error","console","logout","removeItem","$router","push","mounted"],"sources":["C:\\DATA\\POW\\BookSharing_SocialNetwork\\fronvue\\src\\components\\navbar_component.vue"],"sourcesContent":["<template>\r\n  <div class=\"sidebar\">\r\n    <ul>\r\n      <!-- Enlace a Inicio -->\r\n      <li>\r\n        <router-link to=\"/\">Inicio</router-link>\r\n        <i class=\"fa fa-home\"></i>\r\n      </li>\r\n\r\n      <!-- Enlace al Perfil del usuario autenticado -->\r\n      <li>\r\n        <router-link :to=\"`/profile/${username}`\">Perfil</router-link>\r\n        <i class=\"fa fa-user\"></i>\r\n      </li>\r\n\r\n      <!-- Enlace a la búsqueda -->\r\n      <li>\r\n        <router-link to=\"/search\">Buscar</router-link>\r\n        <i class=\"fa fa-search\"></i>\r\n      </li>\r\n\r\n      <!-- Cerrar sesión -->\r\n      <li>\r\n        <a href=\"#\" @click.prevent=\"logout\">Cerrar sesión</a>\r\n        <i class=\"fa fa-sign-out\"></i>\r\n      </li>\r\n    </ul>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport apiClient from '@/services/ApiService';\r\n\r\nexport default {\r\n  name: 'NavComponent',\r\n  data() {\r\n    return {\r\n      username: null, // Aquí almacenaremos el nombre de usuario\r\n    };\r\n  },\r\n  methods: {\r\n    async fetchUserProfile() {\r\n      try {\r\n        const token = localStorage.getItem('authToken'); // Obtener el token del localStorage\r\n        if (token) {\r\n          // Hacer petición al backend para obtener el perfil del usuario autenticado\r\n          const response = await apiClient.get(`/profile/${username}`, {\r\n            headers: {\r\n              Authorization: `Bearer ${token}`,\r\n            },\r\n          });\r\n\r\n          if (response.data && response.data.user) {\r\n            this.username = response.data.user.username; // Asignar el nombre de usuario\r\n          }\r\n        }\r\n      } catch (error) {\r\n        console.error('Error al obtener el perfil del usuario:', error);\r\n      }\r\n    },\r\n    logout() {\r\n      // Eliminar el token de autenticación o limpiar los datos de sesión\r\n      localStorage.removeItem('authToken');\r\n      localStorage.removeItem('profileData'); // Limpiar el perfil almacenado\r\n\r\n      // Redirigir al usuario a la página de login\r\n      this.$router.push('/login');\r\n    },\r\n  },\r\n  mounted() {\r\n    this.fetchUserProfile(); // Llamar al método para obtener el perfil del usuario al montar el componente\r\n  },\r\n};\r\n</script>\r\n\r\n\r\n<style scoped>\r\n.sidebar {\r\n  width: 200px;\r\n  background-color: #f8f9fa;\r\n  padding: 20px;\r\n  position: fixed;\r\n  height: 100%;\r\n}\r\n\r\n.sidebar ul {\r\n  list-style: none;\r\n  padding: 0;\r\n}\r\n\r\n.sidebar li {\r\n  padding: 10px;\r\n  cursor: pointer;\r\n}\r\n\r\n.sidebar li:hover {\r\n  background-color: #e9ecef;\r\n}\r\n</style>\r\n"],"mappings":";AA+BA,OAAOA,SAAQ,MAAO,uBAAuB;AAE7C,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,IAAI,CAAE;IAClB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,gBAAgBA,CAAA,EAAG;MACvB,IAAI;QACF,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC,EAAE;QACjD,IAAIF,KAAK,EAAE;UACT;UACA,MAAMG,QAAO,GAAI,MAAMT,SAAS,CAACU,GAAG,CAAC,YAAYP,QAAQ,EAAE,EAAE;YAC3DQ,OAAO,EAAE;cACPC,aAAa,EAAE,UAAUN,KAAK;YAChC;UACF,CAAC,CAAC;UAEF,IAAIG,QAAQ,CAACP,IAAG,IAAKO,QAAQ,CAACP,IAAI,CAACW,IAAI,EAAE;YACvC,IAAI,CAACV,QAAO,GAAIM,QAAQ,CAACP,IAAI,CAACW,IAAI,CAACV,QAAQ,EAAE;UAC/C;QACF;MACF,EAAE,OAAOW,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,yCAAyC,EAAEA,KAAK,CAAC;MACjE;IACF,CAAC;IACDE,MAAMA,CAAA,EAAG;MACP;MACAT,YAAY,CAACU,UAAU,CAAC,WAAW,CAAC;MACpCV,YAAY,CAACU,UAAU,CAAC,aAAa,CAAC,EAAE;;MAExC;MACA,IAAI,CAACC,OAAO,CAACC,IAAI,CAAC,QAAQ,CAAC;IAC7B;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACf,gBAAgB,CAAC,CAAC,EAAE;EAC3B;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}
{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport apiClient from '@/services/ApiService';\nexport default {\n  data() {\n    return {\n      profileData: {\n        name: '',\n        dob: '',\n        gender: '',\n        description: ''\n      },\n      profileImage: 'https://via.placeholder.com/150',\n      // Imagen predeterminada\n      books: [],\n      // Lista de libros\n      showBookUpload: false,\n      // Controla si mostrar el modal para cargar libros\n      newBook: {\n        title: '',\n        description: '',\n        cover: null\n      }\n    };\n  },\n  async mounted() {\n    const token = localStorage.getItem('authToken');\n    if (token) {\n      try {\n        const response = await apiClient.get('/profile', {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.profileData = response.data.msg;\n        this.profileImage = response.data.msg.profileImage || this.profileImage;\n\n        // Cargar libros\n        const booksResponse = await apiClient.get('/books', {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.books = booksResponse.data;\n      } catch (error) {\n        console.error(\"Error fetching profile or books:\", error);\n      }\n    }\n  },\n  methods: {\n    async updateProfile() {\n      const token = localStorage.getItem('authToken');\n      if (token) {\n        try {\n          const response = await apiClient.put('/profile', this.profileData, {\n            headers: {\n              Authorization: `Bearer ${token}`\n            }\n          });\n          console.log('Profile updated successfully:', response.data);\n        } catch (error) {\n          console.error('Error updating profile:', error);\n        }\n      }\n    },\n    handleFileChange(event) {\n      const file = event.target.files[0];\n      if (file) {\n        const reader = new FileReader();\n        reader.onload = e => {\n          this.profileImage = e.target.result;\n        };\n        reader.readAsDataURL(file);\n      }\n    },\n    openBookUpload() {\n      this.showBookUpload = true;\n    },\n    closeBookUpload() {\n      this.showBookUpload = false;\n    },\n    handleBookCoverChange(event) {\n      this.newBook.cover = event.target.files[0];\n    },\n    async uploadBook() {\n      const token = localStorage.getItem('authToken');\n      if (token) {\n        const formData = new FormData();\n        formData.append('title', this.newBook.title);\n        formData.append('description', this.newBook.description);\n        formData.append('cover', this.newBook.cover);\n        try {\n          const response = await apiClient.post('/books', formData, {\n            headers: {\n              'Authorization': `Bearer ${token}`,\n              'Content-Type': 'multipart/form-data'\n            }\n          });\n          this.books.push(response.data);\n          this.newBook = {\n            title: '',\n            description: '',\n            cover: null\n          }; // Reset fields\n          this.showBookUpload = false; // Close modal\n        } catch (error) {\n          console.error('Error uploading book:', error);\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["apiClient","data","profileData","name","dob","gender","description","profileImage","books","showBookUpload","newBook","title","cover","mounted","token","localStorage","getItem","response","get","headers","Authorization","msg","booksResponse","error","console","methods","updateProfile","put","log","handleFileChange","event","file","target","files","reader","FileReader","onload","e","result","readAsDataURL","openBookUpload","closeBookUpload","handleBookCoverChange","uploadBook","formData","FormData","append","post","push"],"sources":["C:\\DATA\\POW\\BookSharing_SocialNetwork\\fronvue\\src\\components\\profile_component.vue"],"sourcesContent":["<template>\r\n  <div class=\"container mt-5\">\r\n    <div class=\"row justify-content-center\">\r\n      <div class=\"col-md-8\">\r\n        <div class=\"card shadow-lg p-4\">\r\n          <div class=\"card-body text-center position-relative\">\r\n            <!-- Imagen de perfil con área para cargar la imagen -->\r\n            <div class=\"mb-3 position-relative\">\r\n              <label for=\"profileImage\" class=\"profile-image-container\">\r\n                <img :src=\"profileImage\" class=\"rounded-circle img-thumbnail profile-img\" alt=\"Profile Picture\"/>\r\n                <input type=\"file\" id=\"profileImage\" class=\"position-absolute upload-input\" @change=\"handleFileChange\"/>\r\n              </label>\r\n            </div>\r\n\r\n            <h2 class=\"mb-4\">Información del perfil</h2>\r\n\r\n            <!-- Formulario de perfil -->\r\n            <form @submit.prevent=\"updateProfile\">\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"name\">Nombre</label>\r\n                <input type=\"text\" id=\"name\" v-model=\"profileData.name\" class=\"form-control\"/>\r\n              </div>\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"dob\">Fecha de Nacimiento</label>\r\n                <input type=\"date\" id=\"dob\" v-model=\"profileData.dob\" class=\"form-control\"/>\r\n              </div>\r\n              <div class=\"form-group mb-3\">\r\n                <label for=\"gender\">Género</label>\r\n                <select id=\"gender\" v-model=\"profileData.gender\" class=\"form-control\">\r\n                  <option value=\"masculino\">Masculino</option>\r\n                  <option value=\"femenino\">Femenino</option>\r\n                </select>\r\n              </div>\r\n              <div class=\"form-group mb-4\">\r\n                <label for=\"description\">Descripción</label>\r\n                <textarea id=\"description\" v-model=\"profileData.description\" class=\"form-control\" rows=\"3\"></textarea>\r\n              </div>\r\n              <button type=\"submit\" class=\"btn btn-primary w-100 mb-3\">\r\n                Guardar cambios\r\n              </button>\r\n            </form>\r\n\r\n            <!-- Botón para agregar libros -->\r\n            <button class=\"btn btn-secondary w-100\" @click=\"openBookUpload\">\r\n              Subir un libro\r\n            </button>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- Galería de libros -->\r\n        <div class=\"mt-4\">\r\n          <h4>Mis libros</h4>\r\n          <div class=\"row\">\r\n            <div class=\"col-md-4 mb-3\" v-for=\"book in books\" :key=\"book.id\">\r\n              <div class=\"card\">\r\n                <img :src=\"book.cover\" class=\"card-img-top\" alt=\"Book Cover\">\r\n                <div class=\"card-body\">\r\n                  <h5 class=\"card-title\">{{ book.title }}</h5>\r\n                  <p class=\"card-text\">{{ book.description }}</p>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n\r\n  <!-- Modal para cargar libros -->\r\n  <div class=\"modal\" tabindex=\"-1\" role=\"dialog\" v-if=\"showBookUpload\">\r\n    <div class=\"modal-dialog\" role=\"document\">\r\n      <div class=\"modal-content\">\r\n        <div class=\"modal-header\">\r\n          <h5 class=\"modal-title\">Subir Libro</h5>\r\n          <button type=\"button\" class=\"close\" @click=\"closeBookUpload\">\r\n            <span>&times;</span>\r\n          </button>\r\n        </div>\r\n        <div class=\"modal-body\">\r\n          <form @submit.prevent=\"uploadBook\">\r\n            <div class=\"form-group mb-3\">\r\n              <label for=\"bookTitle\">Título del libro</label>\r\n              <input type=\"text\" id=\"bookTitle\" v-model=\"newBook.title\" class=\"form-control\"/>\r\n            </div>\r\n            <div class=\"form-group mb-3\">\r\n              <label for=\"bookDescription\">Descripción</label>\r\n              <textarea id=\"bookDescription\" v-model=\"newBook.description\" class=\"form-control\" rows=\"3\"></textarea>\r\n            </div>\r\n            <div class=\"form-group mb-3\">\r\n              <label for=\"bookCover\">Portada del libro</label>\r\n              <input type=\"file\" id=\"bookCover\" @change=\"handleBookCoverChange\" class=\"form-control\"/>\r\n            </div>\r\n            <button type=\"submit\" class=\"btn btn-primary w-100\">Subir Libro</button>\r\n          </form>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n\r\n<script>\r\nimport apiClient from '@/services/ApiService';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      profileData: {\r\n        name: '',\r\n        dob: '',\r\n        gender: '',\r\n        description: ''\r\n      },\r\n      profileImage: 'https://via.placeholder.com/150',  // Imagen predeterminada\r\n      books: [],  // Lista de libros\r\n      showBookUpload: false,  // Controla si mostrar el modal para cargar libros\r\n      newBook: {\r\n        title: '',\r\n        description: '',\r\n        cover: null\r\n      }\r\n    };\r\n  },\r\n  async mounted() {\r\n    const token = localStorage.getItem('authToken');\r\n    if (token) {\r\n      try {\r\n        const response = await apiClient.get('/profile', {\r\n          headers: {\r\n            Authorization: `Bearer ${token}`\r\n          }\r\n        });\r\n        this.profileData = response.data.msg;\r\n        this.profileImage = response.data.msg.profileImage || this.profileImage;\r\n        \r\n        // Cargar libros\r\n        const booksResponse = await apiClient.get('/books', {\r\n          headers: {\r\n            Authorization: `Bearer ${token}`\r\n          }\r\n        });\r\n        this.books = booksResponse.data;\r\n      } catch (error) {\r\n        console.error(\"Error fetching profile or books:\", error);\r\n      }\r\n    }\r\n  },\r\n  methods: {\r\n    async updateProfile() {\r\n      const token = localStorage.getItem('authToken');\r\n      if (token) {\r\n        try {\r\n          const response = await apiClient.put('/profile', this.profileData, {\r\n            headers: {\r\n              Authorization: `Bearer ${token}`\r\n            }\r\n          });\r\n          console.log('Profile updated successfully:', response.data);\r\n        } catch (error) {\r\n          console.error('Error updating profile:', error);\r\n        }\r\n      }\r\n    },\r\n    handleFileChange(event) {\r\n      const file = event.target.files[0];\r\n      if (file) {\r\n        const reader = new FileReader();\r\n        reader.onload = (e) => {\r\n          this.profileImage = e.target.result;\r\n        };\r\n        reader.readAsDataURL(file);\r\n      }\r\n    },\r\n    openBookUpload() {\r\n      this.showBookUpload = true;\r\n    },\r\n    closeBookUpload() {\r\n      this.showBookUpload = false;\r\n    },\r\n    handleBookCoverChange(event) {\r\n      this.newBook.cover = event.target.files[0];\r\n    },\r\n    async uploadBook() {\r\n      const token = localStorage.getItem('authToken');\r\n      if (token) {\r\n        const formData = new FormData();\r\n        formData.append('title', this.newBook.title);\r\n        formData.append('description', this.newBook.description);\r\n        formData.append('cover', this.newBook.cover);\r\n\r\n        try {\r\n          const response = await apiClient.post('/books', formData, {\r\n            headers: {\r\n              'Authorization': `Bearer ${token}`,\r\n              'Content-Type': 'multipart/form-data'\r\n            }\r\n          });\r\n          this.books.push(response.data);\r\n          this.newBook = { title: '', description: '', cover: null };  // Reset fields\r\n          this.showBookUpload = false;  // Close modal\r\n        } catch (error) {\r\n          console.error('Error uploading book:', error);\r\n        }\r\n      }\r\n    }\r\n  }\r\n};\r\n\r\n</script>"],"
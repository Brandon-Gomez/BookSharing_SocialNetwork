Following;\n          if (this.isCurrentUser) localStorage.setItem('userData', JSON.stringify(this.userData));\n        } catch (error) {\n          console.error(\"Error fetching user:\", error);\n        }\n      }\n    },\n    async updateUser() {\n      const token = localStorage.getItem('authToken');\n      if (token) {\n        try {\n          const response = await apiClient.put(`/profile/${this.userData.username}`, this.userData, {\n            headers: {\n              Authorization: `Bearer ${token}`\n            }\n          });\n          this.userData = response.data.user;\n          alert('Perfil actualizado correctamente');\n        } catch (error) {\n          console.error(\"Error updating user:\", error);\n        }\n      }\n    },\n    logout() {\n      localStorage.removeItem('authToken');\n      this.$router.push('/login');\n    }\n  },\n  beforeMount() {\n    this.getUser();\n  }\n};","map":{"version":3,"names":["apiClient","MainLayout","breadcrumb_component","components","data","userData","id","name","username","birthdate","description","user_picture","isCurrentUser","publications","follows","isFollowing","followers","following","computed","formattedBirthdate","date","Date","toLocaleDateString","watch","$route","getUser","methods","getUserImage","defaultImageUrl","token","localStorage","getItem","response","get","params","headers","Authorization","user","split","setItem","JSON","stringify","error","console","updateUser","put","alert","logout","removeItem","$router","push","beforeMount"],"sources":["D:\\Downloads\\BookSharing_SocialNetwork\\fronvue\\src\\components\\profile_component.vue"],"sourcesContent":["<template>\r\n  <MainLayout>\r\n    <div>\r\n      <div class=\"page-title-overlap bg-dark pt-4\">\r\n        <div class=\"container d-lg-flex justify-content-between py-2 py-lg-3\">\r\n          <div class=\"order-lg-2 mb-3 mb-lg-0 pt-lg-2\">\r\n            <breadcrumb_component :items=\"[\r\n              { label: 'Inicio', to: '/' },\r\n              { label: 'Perfil' },\r\n            ]\" theme=\"breadcrumb-light\" />\r\n          </div>\r\n          <div class=\"order-lg-1 pe-lg-4 text-center text-lg-start\">\r\n            <h1 class=\"h3 text-light mb-0\">Información de perfil</h1>\r\n          </div>\r\n        </div>\r\n      </div>\r\n      <div class=\"container pb-5 mb-2 mb-md-4\">\r\n        <div class=\"row\">\r\n          <!-- Sidebar-->\r\n          <aside class=\"col-lg-4 pt-4 pt-lg-0 pe-xl-5\">\r\n            <div class=\"bg-white rounded-3 shadow-lg pt-1 mb-5 mb-lg-0\">\r\n              <div class=\"d-md-flex justify-content-between align-items-center text-center text-md-start p-4\">\r\n                <div class=\"d-md-flex align-items-center\">\r\n                  <div class=\"img-thumbnail rounded-circle position-relative flex-shrink-0 mx-auto mb-2 mx-md-0 mb-md-0\"\r\n                    style=\"width: 6.375rem;\">\r\n                    <img class=\"rounded-circle\" :src=\"getUserImage()\" alt=\"Foto de perfil\">\r\n                  </div>\r\n                  <div class=\"ps-md-3\">\r\n                    <h3 class=\"fs-base mb-0\">{{ userData.name }}</h3>\r\n                    <span class=\"text-accent fs-sm\">{{ userData.email }}</span>\r\n                  </div>\r\n                </div>\r\n                <a class=\"btn btn-primary d-lg-none mb-2 mt-3 mt-md-0\" href=\"#account-menu\" data-bs-toggle=\"collapse\"\r\n                  aria-expanded=\"false\">\r\n                  <i class=\"ci-menu me-2\"></i>Menú\r\n                </a>\r\n              </div>\r\n              <div class=\"d-lg-block collapse\" id=\"account-menu\">\r\n                <div class=\"bg-secondary px-4 py-3\">\r\n                  <h3 class=\"fs-sm mb-0 text-muted\">Panel</h3>\r\n                </div>\r\n                <ul class=\"list-unstyled mb-0\">\r\n                  <li class=\"border-bottom mb-0\">\r\n                    <a class=\"nav-link-style d-flex align-items-center px-4 py-3
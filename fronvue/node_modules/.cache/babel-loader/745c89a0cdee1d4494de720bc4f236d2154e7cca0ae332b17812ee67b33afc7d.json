{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport apiClient from '@/services/ApiService';\nexport default {\n  data() {\n    return {\n      profileData: JSON.parse(localStorage.getItem('profileData')) || {\n        name: '',\n        username: '',\n        profile_picture: ''\n      },\n      isSearchVisible: false,\n      searchQuery: '',\n      users: []\n    };\n  },\n  methods: {\n    getProfileImage() {\n      const staticFiles = \"http://localhost:4000/static/profiles/\";\n      return this.profileData.profile_picture ? staticFiles + this.profileData.profile_picture : staticFiles + \"default.jpg\";\n    },\n    navigateToHome() {\n      this.$router.push('/');\n    },\n    navigateToProfile() {\n      const isAuthenticated = this.checkAuthentication();\n      if (isAuthenticated) {\n        this.$router.push(`/profile/${this.profileData.username}`);\n      } else {\n        alert(\"Por favor, inicia sesión primero.\");\n        this.$router.push('/login');\n      }\n    },\n    toggleSearch() {\n      this.isSearchVisible = !this.isSearchVisible;\n    },\n    async searchUser() {\n      if (this.searchQuery.length > 2) {\n        try {\n          const response = await apiClient.get('/search', {\n            params: {\n              query: this.searchQuery\n            }\n          });\n          this.users = response.data;\n        } catch (error) {\n          console.error('Error al buscar usuarios:', error);\n        }\n      } else {\n        this.users = [];\n      }\n    },\n    goToProfile(username) {\n      this.$router.push(`/profile/${username}`);\n      this.isSearchVisible = false;\n    },\n    logout() {\n      localStorage.removeItem('authToken');\n      localStorage.removeItem('profileData');\n      this.$router.push('/login');\n    },\n    checkAuthentication() {\n      return !!localStorage.getItem('authToken');\n    }\n  }\n};","map":{"version":3,"names":["apiClient","data","profileData","JSON","parse","localStorage","getItem","name","username","profile_picture","isSearchVisible","searchQuery","users","methods","getProfileImage","staticFiles","navigateToHome","$router","push","navigateToProfile","isAuthenticated","checkAuthentication","alert","toggleSearch","searchUser","length","response","get","params","query","error","console","goToProfile","logout","removeItem"],"sources":["C:\\DATA\\POW\\BookSharing_SocialNetwork\\fronvue\\src\\components\\navbar_component.vue"],"sourcesContent":["<template>\r\n  <div class=\"sidebar bg-gradient d-flex flex-column vh-100\">\r\n    <div class=\"profile-section text-center py-4\">\r\n      <img\r\n        :src=\"getProfileImage()\"\r\n        class=\"profile-picture rounded-circle mb-3\"\r\n        alt=\"Profile\"\r\n      />\r\n      <h5 class=\"text-white\">{{ profileData.name }}</h5>\r\n      <p class=\"text-light\">{{ profileData.username || 'No disponible' }}</p>\r\n    </div>\r\n    \r\n    <ul class=\"list-group list-group-flush\">\r\n      <li class=\"list-group-item list-group-item-action\" @click=\"navigateToHome\">\r\n        <i class=\"fa fa-home\"></i> Inicio\r\n      </li>\r\n      <li class=\"list-group-item list-group-item-action\" @click=\"navigateToProfile\">\r\n        <i class=\"fa fa-user\"></i> Perfil\r\n      </li>\r\n      <li class=\"list-group-item list-group-item-action\" @click=\"logout\">\r\n        <i class=\"fa fa-sign-out\"></i> Cerrar sesión\r\n      </li>\r\n      <li class=\"list-group-item list-group-item-action\" @click=\"toggleSearch\">\r\n        <i class=\"fa fa-search\"></i> Buscar\r\n      </li>\r\n    </ul>\r\n\r\n    <div v-if=\"isSearchVisible\" class=\"search-bar p-3\">\r\n      <input\r\n        type=\"text\"\r\n        v-model=\"searchQuery\"\r\n        @input=\"searchUser\"\r\n        placeholder=\"Buscar usuario...\"\r\n        class=\"form-control\"\r\n      />\r\n      <ul v-if=\"users.length\" class=\"list-group mt-2\">\r\n        <li \r\n          v-for=\"user in users\" \r\n          :key=\"user.id\" \r\n          class=\"list-group-item list-group-item-action\" \r\n          @click=\"goToProfile(user.username)\">\r\n          {{ user.username }} ({{ user.name }})\r\n        </li>\r\n      </ul>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport apiClient from '@/services/ApiService';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      profileData: JSON.parse(localStorage.getItem('profileData')) || {\r\n        name: '',\r\n        username: '',\r\n        profile_picture: ''\r\n      },\r\n      isSearchVisible: false,\r\n      searchQuery: '',\r\n      users: [],\r\n    };\r\n  },\r\n  methods: {\r\n    getProfileImage() {\r\n      const staticFiles = \"http://localhost:4000/static/profiles/\";\r\n      return this.profileData.profile_picture\r\n        ? staticFiles + this.profileData.profile_picture\r\n        : staticFiles + \"default.jpg\";\r\n    },\r\n    navigateToHome() {\r\n      this.$router.push('/');\r\n    },\r\n    navigateToProfile() {\r\n      const isAuthenticated = this.checkAuthentication();\r\n      if (isAuthenticated) {\r\n        this.$router.push(`/profile/${this.profileData.username}`);\r\n      } else {\r\n        alert(\"Por favor, inicia sesión primero.\");\r\n        this.$router.push('/login');\r\n      }\r\n    },\r\n    toggleSearch() {\r\n      this.isSearchVisible = !this.isSearchVisible;\r\n    },\r\n    async searchUser() {\r\n      if (this.searchQuery.length > 2) {\r\n        try {\r\n          const response = await apiClient.get('/search', { params: { query: this.searchQuery } });\r\n          this.users = response.data;\r\n        } catch (error) {\r\n          console.error('Error al buscar usuarios:', error);\r\n        }\r\n      } else {\r\n        this.users = [];\r\n      }\r\n    },\r\n    goToProfile(username) {\r\n      this.$router.push(`/profile/${username}`);\r\n      this.isSearchVisible = false;\r\n    },\r\n    logout() {\r\n      localStorage.removeItem('authToken');\r\n      localStorage.removeItem('profileData');\r\n      this.$router.push('/login');\r\n    },\r\n    checkAuthentication() {\r\n      return !!localStorage.getItem('authToken');\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n/* Sidebar general style */\r\n.sidebar {\r\n  width: 250px;\r\n  background-color: #d3d3d3; /* Fondo gris brillante */\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  bottom: 0;\r\n  padding: 0;\r\n  z-index: 1000;\r\n  border-radius: 0 10px 10px 0; /* Bordes suaves */\r\n  box-shadow: 3px 0 10px rgba(0, 0, 0, 0.1); /* Sombra suave */\r\n  transition: width 0.3s ease;\r\n}\r\n\r\n.sidebar:hover {\r\n  width: 260px;\r\n}\r\n\r\n/* Profile section */\r\n.profile-section {\r\n  background-color: #2c3e50; /* Un azul más oscuro para la cabecera */\r\n  border-bottom: 1px solid rgba(255, 255, 255, 0.1);\r\n}\r\n\r\n.profile-picture {\r\n  width: 80px;\r\n  height: 80px;\r\n  border: 3px solid #1abc9c; /* Borde color verde suave */\r\n  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2); /* Sombra suave para la imagen */\r\n}\r\n\r\n/* List group style */\r\n.list-group-item {\r\n  cursor: pointer;\r\n  padding: 15px 20px;\r\n  transition: background-color 0.3s, color 0.3s;\r\n  border: none;\r\n  background-color: transparent; /* Fondo transparente */\r\n  color: #34495e; /* Color del texto oscuro */\r\n}\r\n\r\n.list-group-item:hover {\r\n  background-color: #1abc9c; /* Un verde sutil */\r\n  color: white;\r\n}\r\n\r\n/* Search bar */\r\n.search-bar {\r\n  padding: 15px;\r\n  background-color: #ffffff;\r\n  border-top: 1px solid #ecf0f1;\r\n}\r\n\r\n.search-bar input {\r\n  border-radius: 20px; /* Bordes suaves */\r\n}\r\n\r\n.list-group {\r\n  max-height: 150px; /* Mantiene el scroll en la búsqueda */\r\n  overflow-y: auto; /* Permite el scroll en la búsqueda */\r\n}\r\n\r\n/* Transiciones y responsividad */\r\n.sidebar:hover {\r\n  width: 260px;\r\n}\r\n\r\n@media (max-width: 768px) {\r\n  .sidebar {\r\n    width: 220px;\r\n  }\r\n\r\n  .sidebar:hover {\r\n    width: 230px;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";AAiDA,OAAOA,SAAQ,MAAO,uBAAuB;AAE7C,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,WAAW,EAAEC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,aAAa,CAAC,KAAK;QAC9DC,IAAI,EAAE,EAAE;QACRC,QAAQ,EAAE,EAAE;QACZC,eAAe,EAAE;MACnB,CAAC;MACDC,eAAe,EAAE,KAAK;MACtBC,WAAW,EAAE,EAAE;MACfC,KAAK,EAAE;IACT,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,eAAeA,CAAA,EAAG;MAChB,MAAMC,WAAU,GAAI,wCAAwC;MAC5D,OAAO,IAAI,CAACb,WAAW,CAACO,eAAc,GAClCM,WAAU,GAAI,IAAI,CAACb,WAAW,CAACO,eAAc,GAC7CM,WAAU,GAAI,aAAa;IACjC,CAAC;IACDC,cAAcA,CAAA,EAAG;MACf,IAAI,CAACC,OAAO,CAACC,IAAI,CAAC,GAAG,CAAC;IACxB,CAAC;IACDC,iBAAiBA,CAAA,EAAG;MAClB,MAAMC,eAAc,GAAI,IAAI,CAACC,mBAAmB,CAAC,CAAC;MAClD,IAAID,eAAe,EAAE;QACnB,IAAI,CAACH,OAAO,CAACC,IAAI,CAAC,YAAY,IAAI,CAAChB,WAAW,CAACM,QAAQ,EAAE,CAAC;MAC5D,OAAO;QACLc,KAAK,CAAC,mCAAmC,CAAC;QAC1C,IAAI,CAACL,OAAO,CAACC,IAAI,CAAC,QAAQ,CAAC;MAC7B;IACF,CAAC;IACDK,YAAYA,CAAA,EAAG;MACb,IAAI,CAACb,eAAc,GAAI,CAAC,IAAI,CAACA,eAAe;IAC9C,CAAC;IACD,MAAMc,UAAUA,CAAA,EAAG;MACjB,IAAI,IAAI,CAACb,WAAW,CAACc,MAAK,GAAI,CAAC,EAAE;QAC/B,IAAI;UACF,MAAMC,QAAO,GAAI,MAAM1B,SAAS,CAAC2B,GAAG,CAAC,SAAS,EAAE;YAAEC,MAAM,EAAE;cAAEC,KAAK,EAAE,IAAI,CAAClB;YAAY;UAAE,CAAC,CAAC;UACxF,IAAI,CAACC,KAAI,GAAIc,QAAQ,CAACzB,IAAI;QAC5B,EAAE,OAAO6B,KAAK,EAAE;UACdC,OAAO,CAACD,KAAK,CAAC,2BAA2B,EAAEA,KAAK,CAAC;QACnD;MACF,OAAO;QACL,IAAI,CAAClB,KAAI,GAAI,EAAE;MACjB;IACF,CAAC;IACDoB,WAAWA,CAACxB,QAAQ,EAAE;MACpB,IAAI,CAACS,OAAO,CAACC,IAAI,CAAC,YAAYV,QAAQ,EAAE,CAAC;MACzC,IAAI,CAACE,eAAc,GAAI,KAAK;IAC9B,CAAC;IACDuB,MAAMA,CAAA,EAAG;MACP5B,YAAY,CAAC6B,UAAU,CAAC,WAAW,CAAC;MACpC7B,YAAY,CAAC6B,UAAU,CAAC,aAAa,CAAC;MACtC,IAAI,CAACjB,OAAO,CAACC,IAAI,CAAC,QAAQ,CAAC;IAC7B,CAAC;IACDG,mBAAmBA,CAAA,EAAG;MACpB,OAAO,CAAC,CAAChB,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC;IAC5C;EACF;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}
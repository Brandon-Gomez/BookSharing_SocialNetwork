{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport apiClient from \"@/services/ApiService\";\nimport MainLayout from \"@/layouts/MainLayout.vue\";\nimport Pagination from \"@/components/pagination_component.vue\";\nimport LikeComponent from \"@/components/like_component.vue\";\nexport default {\n  components: {\n    MainLayout,\n    Pagination,\n    LikeComponent\n  },\n  data() {\n    return {\n      isAuth: true,\n      posts: [],\n      page: 1,\n      limit: 15,\n      totalPages: 0\n    };\n  },\n  methods: {\n    async getPostsPaginated() {\n      try {\n        const token = localStorage.getItem(\"authToken\");\n        const response = await apiClient.get(`/posts?page=${this.page}&limit=${this.limit}`, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.posts = response.data.posts;\n        this.totalPages = response.data.totalPages;\n      } catch (error) {\n        // redirect to login if token is invalid\n        localStorage.removeItem(\"authToken\");\n        this.$router.push(\"/login\");\n      }\n    },\n    onPageChange(n) {\n      this.page = n;\n      this.getPostsPaginated();\n    }\n  },\n  mounted() {\n    this.getPostsPaginated();\n  }\n};","map":{"version":3,"names":["apiClient","MainLayout","Pagination","LikeComponent","components","data","isAuth","posts","page","limit","totalPages","methods","getPostsPaginated","token","localStorage","getItem","response","get","headers","Authorization","error","removeItem","$router","push","onPageChange","n","mounted"],"sources":["D:\\Downloads\\BookSharing_SocialNetwork\\fronvue\\src\\components\\home_component.vue"],"sourcesContent":["<template>\r\n  <MainLayout>\r\n    <div class=\"bg-dark py-4\">\r\n      <div class=\"container d-lg-flex justify-content-start py-2 py-lg-3\">\r\n        <div class=\"order-lg-1 pe-lg-4 text-center text-lg-start\">\r\n          <h1 class=\"h3 mb-0 text-light\">Explora libros</h1>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <div class=\"container pb-5 mb-2 mb-md-4\">\r\n      <div class=\"pt-5 mt-md-2\">\r\n        <!-- Nuevo grid de artÃ­culos -->\r\n        <div class=\"library-grid\">\r\n          <article\r\n            class=\"library-item\"\r\n            v-for=\"post in posts\"\r\n            :key=\"post.post_id\"\r\n          >\r\n            <div class=\"card\">\r\n              <LikeComponent\r\n                :postId=\"post.post_id \"\r\n                customClass=\"btn-wishlist btn-sm position-absolute\"\r\n                :customStyle=\"{\r\n                  top: '0.5rem',\r\n                  right: '0.5rem',\r\n                  zIndex: 2,\r\n                  background: 'rgba(255, 255, 255, 0.7)',\r\n                  borderRadius: '50%',\r\n                }\"\r\n              />\r\n            \r\n              <RouterLink\r\n                class=\"blog-entry-thumb\"\r\n                :to=\"`posts/${post.post_id}`\"\r\n              >\r\n                <img class=\"card-img-top\" :src=\"post.image\" alt=\"Post\" />\r\n              </RouterLink>\r\n              <div class=\"card-body\">\r\n                <h2 class=\"h6 blog-entry-title\">\r\n                  <RouterLink :to=\"`/posts/${post.post_id}`\">\r\n                    {{ post.title }}\r\n                  </RouterLink>\r\n                </h2>\r\n                <a\r\n                  class=\"btn-tag me-2 mb-2\"\r\n                  :href=\"`/category/${post.category_id}`\"\r\n                  >{{ post.category_name }}</a\r\n                >\r\n              </div>\r\n              <div class=\"card-footer d-flex align-items-center fs-xs\">\r\n                <RouterLink\r\n                  class=\"blog-entry-meta-link\"\r\n                  :to=\"`/profile/${post.username}`\"\r\n                >\r\n                  @{{ post.username }}\r\n                </RouterLink>\r\n                <div class=\"ms-auto text-nowrap\">\r\n                  <a class=\"blog-entry-meta-link text-nowrap\">\r\n                    {{\r\n                      new Date(post.created_at).toLocaleString(\"en-US\", {\r\n                        month: \"short\",\r\n                        day: \"2-digit\",\r\n                      })\r\n                    }}\r\n                  </a>\r\n                  <span class=\"blog-entry-meta-divider mx-2\"></span>\r\n                  <a class=\"blog-entry-meta-link text-nowrap\">\r\n                    <i class=\"ci-heart\"></i>{{ post.total_likes }}\r\n                  </a>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </article>\r\n        </div>\r\n        <!-- Pagination-->\r\n        <Pagination\r\n          v-model=\"page\"\r\n          :totalPages=\"totalPages\"\r\n          @update:modelValue=\"onPageChange\"\r\n        />\r\n      </div>\r\n    </div>\r\n  </MainLayout>\r\n</template>\r\n\r\n<script>\r\nimport apiClient from \"@/services/ApiService\";\r\nimport MainLayout from \"@/layouts/MainLayout.vue\";\r\nimport Pagination from \"@/components/pagination_component.vue\";\r\nimport LikeComponent from \"@/components/like_component.vue\";\r\nexport default {\r\n  components: {\r\n    MainLayout,\r\n    Pagination,\r\n    LikeComponent,\r\n  },\r\n  data() {\r\n    return {\r\n      isAuth: true,\r\n      posts: [],\r\n      page: 1,\r\n      limit: 15,\r\n      totalPages: 0,\r\n    };\r\n  },\r\n\r\n  methods: {\r\n    async getPostsPaginated() {\r\n      try {\r\n        const token = localStorage.getItem(\"authToken\");\r\n        const response = await apiClient.get(\r\n          `/posts?page=${this.page}&limit=${this.limit}`,\r\n          {\r\n            headers: {\r\n              Authorization: `Bearer ${token}`,\r\n            },\r\n          }\r\n        );\r\n        this.posts = response.data.posts;\r\n        this.totalPages = response.data.totalPages;\r\n      } catch (error) {\r\n        // redirect to login if token is invalid\r\n        localStorage.removeItem(\"authToken\");\r\n        this.$router.push(\"/login\");\r\n      }\r\n    },\r\n    onPageChange(n) {\r\n      this.page = n;\r\n      this.getPostsPaginated();\r\n    },\r\n  },\r\n\r\n  mounted() {\r\n    this.getPostsPaginated();\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.library-grid {\r\n  display: grid;\r\n  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));\r\n  gap: 2rem;\r\n  margin-bottom: 2rem;\r\n}\r\n\r\n.library-item .card {\r\n  height: 100%;\r\n  max-width: 250px;\r\n  margin: 0 auto;\r\n}\r\n\r\n.card-img-top {\r\n  height: 300px;\r\n  object-fit: cover;\r\n}\r\n</style>\r\n"],"mappings":";AAuFA,OAAOA,SAAQ,MAAO,uBAAuB;AAC7C,OAAOC,UAAS,MAAO,0BAA0B;AACjD,OAAOC,UAAS,MAAO,uCAAuC;AAC9D,OAAOC,aAAY,MAAO,iCAAiC;AAC3D,eAAe;EACbC,UAAU,EAAE;IACVH,UAAU;IACVC,UAAU;IACVC;EACF,CAAC;EACDE,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE,IAAI;MACZC,KAAK,EAAE,EAAE;MACTC,IAAI,EAAE,CAAC;MACPC,KAAK,EAAE,EAAE;MACTC,UAAU,EAAE;IACd,CAAC;EACH,CAAC;EAEDC,OAAO,EAAE;IACP,MAAMC,iBAAiBA,CAAA,EAAG;MACxB,IAAI;QACF,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC;QAC/C,MAAMC,QAAO,GAAI,MAAMhB,SAAS,CAACiB,GAAG,CAClC,eAAe,IAAI,CAACT,IAAI,UAAU,IAAI,CAACC,KAAK,EAAE,EAC9C;UACES,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUN,KAAK;UAChC;QACF,CACF,CAAC;QACD,IAAI,CAACN,KAAI,GAAIS,QAAQ,CAACX,IAAI,CAACE,KAAK;QAChC,IAAI,CAACG,UAAS,GAAIM,QAAQ,CAACX,IAAI,CAACK,UAAU;MAC5C,EAAE,OAAOU,KAAK,EAAE;QACd;QACAN,YAAY,CAACO,UAAU,CAAC,WAAW,CAAC;QACpC,IAAI,CAACC,OAAO,CAACC,IAAI,CAAC,QAAQ,CAAC;MAC7B;IACF,CAAC;IACDC,YAAYA,CAACC,CAAC,EAAE;MACd,IAAI,CAACjB,IAAG,GAAIiB,CAAC;MACb,IAAI,CAACb,iBAAiB,CAAC,CAAC;IAC1B;EACF,CAAC;EAEDc,OAAOA,CAAA,EAAG;IACR,IAAI,CAACd,iBAAiB,CAAC,CAAC;EAC1B;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}